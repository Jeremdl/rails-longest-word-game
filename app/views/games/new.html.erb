<div class="container">
  <div>
    <p>New view is on</p>
    <h1>New Game</h1>
    <input id="letters" name="letters" type="hidden" value= <% @letters%>/>
    <ul class="list-inline">
      <% @letters.each do |letter| %>
        <li><%= letter.capitalize %></li>
      <% end %>
    </ul>
  </div>
  <div>
    <p>What is the longest word you can find?</p>
    <form action="/score" method="POST" data-turbo="false">
      <input type="text" name="answer" placeholder="Type in your longest word!">
      <input type="submit" value="Submit answer">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
    </form>
  </div>
</div>
